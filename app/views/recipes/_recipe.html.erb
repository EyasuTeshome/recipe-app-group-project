<div id="<%= dom_id recipe %>">
  <h1>
    <strong>
    <%= recipe.name %>
    </strong>
  </h1>

  <div class="form-check form-switch">
    <label class="form-check-label" for="flexSwitchCheckChecked">Public: </label>
    <%if recipe.public %>
      <input style="color: green" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked disabled>
    <% else %>
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" disabled>
    <% end %>
  </div>
  <p>
    <strong>Preparation time:</strong>
    <%= recipe.preparation_time %>
  </p>

  <p>
    <strong>Cooking time:</strong>
    <%= recipe.cooking_time %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>



</div>
